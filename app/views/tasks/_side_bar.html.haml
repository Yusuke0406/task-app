.task-side
  .tasks
    -current_user.categories.each do|category|
      .task__box
        .task__box__name
          = link_to category_tasks_path(category) do
            = fa_icon 'list', class: 'choise' 
            =category.cat_name
        .task__box__edit
          = fa_icon 'pencil', class: 'pen' 
  .header
    %a#fadetoggle_button{:href => "#"} ï¼‹
    .form
      = form_for [@category],action:'POST',html:{id:'fadetoggle_menu'} do |f|
        = f.text_field :cat_name, class: 'form__message', placeholder: 'Add category'
        = f.submit 'Send', class: 'form__submit'

