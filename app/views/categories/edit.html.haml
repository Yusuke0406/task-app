.task-side
  .tasks
    -current_user.categories.each do|category|
      .task__box
        .task__box__name
          = link_to category_tasks_path(category) do
            = fa_icon 'list', class: 'choise' 
            =category.cat_name
        .task__box__edit
          = link_to  edit_category_path(category.id) do
            = fa_icon 'pencil', class: 'pen' 
  .header
    %a#fadetoggle_button{:href => "#"} ＋
.task
  .task__edit
    .account-page__inner--right.user-form
    = form_for(@category) do |f|
      .field
        .field-label
          = f.label :name
        .field-input
          = f.text_field :cat_name
      .actions
        = f.submit "Update", class: 'btn'

    = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'link'
    = link_to "カテゴリー削除",category_path, method: :delete, class: 'link'
