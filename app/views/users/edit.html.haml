.account-page
  .account-page__inner--left.account-page__header
    %h1 Edit Account
  .account-page__inner--right.user-form
    = form_for(current_user) do |f|
      .field
        .field-label
          = f.label :name
        .field-input
          = f.text_field :name, autofocus: true
      .field
        .field-label
          = f.label :email
        .field-input
          = f.email_field :email
      .actions
        = f.submit "Update", class: 'btn'

    = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'link'
    = link_to "トップページに戻る", :back, class: 'link'